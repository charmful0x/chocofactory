{
  "name": "chocofactory",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "scripts": {
    "killport": "kill-port --port 8545",
    "format": "prettier . --ignore-path .gitignore --write",
    "lint": "echo lint will be implemented soon",
    "test": "yarn workspace contracts test",
    "predev": "yarn killport",
    "dev": "run-p dev:*",
    "dev:run-localchain": "yarn workspace contracts run-localchain",
    "dev:deploy-contract-to-localchain": "wait-on http://localhost:8545 && yarn workspace contracts deploy-contract-to-localchain",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/**"
  ],
  "resolutions": {
    "multicodec": "2.0.0",
    "cids": "1.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "firebase-tools": "^9.5.0",
    "husky": "^5.1.3",
    "kill-port": "^1.6.1",
    "npm-run-all": "^4.1.5",
    "wait-on": "^5.2.1"
  }
}
